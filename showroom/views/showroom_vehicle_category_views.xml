<?xml version='1.0'?>
<odoo>    
    <record id='showroom_vehicle_category_action' model='ir.actions.act_window'>
        <field name='name'>Categories</field>
        <field name='res_model'>showroom.vehicle.category</field>
        <field name='view_mode'>tree,form</field>
         <field name='help' type='html'>
          <p class='o_view_nocontent_smiling_face'>
            Create your Vehicle Category
          </p>
        </field>
    </record>

    <record id='showroom_vehicle_category_view_tree' model='ir.ui.view'>
        <field name='name'>showroom.vehicle.category.tree</field>
        <field name='model'>showroom.vehicle.category</field>
        <field name='arch' type='xml'>
            <tree string='showroom vehicle category tree' editable='bottom'>
                 <field name='sequence' widget='handle'/>
                <field name='name'/>
            </tree>
        </field>
    </record>
</odoo>