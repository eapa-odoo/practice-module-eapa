<?xml version='1.0'?>
<odoo>
    <record id='showroom_vehicle_action' model='ir.actions.act_window'>
        <field name='name'>Vehicle</field>
        <field name='res_model'>showroom.vehicle</field>
        <field name='view_mode'>tree,form</field>
         <field name='help' type='html'>
          <p class='o_view_nocontent_smiling_face'>
            Create your first vehicle
          </p>
        </field>
    </record>

    <record id='showroom_vehicle_view_tree' model='ir.ui.view'>
        <field name='name'>showroom.vehicle.tree</field>
        <field name='model'>showroom.vehicle</field>
        <field name='arch' type='xml'>
            <tree string='showroom vehicle tree'>
                <field name='veh_company'/>
                <field name='veh_model_id'/>
                <field name='veh_type_id'/>
                <field name='veh_cost'/>
                <field name='veh_description'/>
            </tree>
        </field>
    </record>

    <record id='showroom_vehicle_view_from' model='ir.ui.view'>
        <field name='name'>showroom.vehicle.form</field>
        <field name='model'>showroom.vehicle</field>
        <field name='arch' type='xml'>
            <form string='showroom vehicle form'>
                <sheet>
                    <field name='veh_image' class='oe_avatar' widget='image'/>
                    <div class='oe_title'>
                        <label for="veh_company"/>
                        <h1>
                            <field name="veh_company" placeholder="e.g. BMW"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name='veh_model_id'/>
                            <field name='veh_type_id' string='Type'/>
                        </group>
                        <group>
                            <field name='veh_cost'/>
                        </group>
                        <div><br/></div>
                        <notebook>
                            <page string='Model'>
                                <group>
                                    <group string='model'>
                                        <field name='veh_model_year' widget='char' string='Model Year'/>
                                        <field name='veh_transmission' string='Transmission'/>
                                    </group>
                                    <group string='engine'>
                                        <field name='veh_horsepower' string='Horsepower'/>
                                        <label for='veh_power'/>
                                        <div class='o_row'>
                                            <field name='veh_power' string='Power'/><span>kW</span>
                                        </div>
                                        <field name='veh_fuel_type' string='Fuel Type'/>
                                        <label for='veh_emissions'/>
                                        <div class='o_row'>
                                            <field name='veh_emissions' string='CO2 Emissions'/><span>g/km</span>
                                        </div>
                                    </group>
                                </group>
                            </page>
                            <page string='Note'>
                                <field name='veh_description' nolabel="1" placeholder="Write here any other information related to this vehicle"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>